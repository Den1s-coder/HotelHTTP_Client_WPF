<Window x:Class="HotelHTTP_Client_WPF.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelHTTP_Client_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <Button Content="Завантажити вільні номери" Click="LoadRoomsButton_Click" Margin="0 0 0 10"/>
            <DataGrid x:Name="RoomsDataGrid" AutoGenerateColumns="True" Height="200" Margin="0 0 0 10"/>
            <Button Content="Забронювати вибраний номер" Click="BookButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
